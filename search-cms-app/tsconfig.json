{
  "compilerOptions": {
    "target": "ES2020",  
    "outDir": "public",
       "moduleResolution": "node",
   
    "module": "ESNext",
    "lib": ["ESNext", "DOM"]  ,         
  
    "typeRoots": ["./node_modules/@types", "./node_modules/@webflow"],
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "react": ["node_modules/react"],
      "react-dom": ["node_modules/react-dom"],
   
      
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts"  // Add vite config here for typescript processing
  ],
  "exclude": ["node_modules"]
}